@model  IEnumerable<WebHotelThienAn.Models.KhuVuc>
@{
    ViewBag.Title = "SelectArea";
    Layout = "~/Views/Shared/LayoutListing.cshtml";
}
@{
    var datethue = ViewBag.datethue;
    var datetra = ViewBag.datetra;
}
<section id="featured" class="py-4">
    <div class="container">
        <div class="title-wrap">
            <span class="sm-title">Bạn Hãy Chọn Khu Vực Cần Đặt </span>
            <h2 class="lg-title">@ViewBag.TenKV</h2>

        </div>
        <div class="featured-row">
            @foreach (var item in Model)
            {

            <div class="featured-item my-2 shadow">
                @if (@String.IsNullOrEmpty(datethue) == false || @String.IsNullOrEmpty(datetra) == false)
                {
                    <a href="@Url.Action("ProductWithArea", "Products", new { idKhuVuc = item.IDKhuVuc, idLoaiPhong = ViewBag.idLoaiPhong, datethue = datethue, datetra = datetra  })">
                        <img src="@item.anhduphong" alt="featured place" />
                    </a>
                    <div class="featured-item-content">
                        <a href="@Url.Action("ProductWithArea", "Products", new { idKhuVuc = item.IDKhuVuc, idLoaiPhong = ViewBag.idLoaiPhong, datethue = datethue, datetra = datetra  })">
                            <span>
                                <i class="fas fa-map-marker-alt"></i>
                                @item.TenKV
                            </span>
                        </a>
                    </div>
                }
                else
                {

                    <a href="@Url.Action("ProductWithArea", "Products", new { idKhuVuc = item.IDKhuVuc, idLoaiPhong = ViewBag.idLoaiPhong })">
                        <img src="@item.anhduphong" alt="featured place" />
                    </a>
                    <div class="featured-item-content">
                        <a href="@Url.Action("ProductWithArea", "Products", new { idKhuVuc = item.IDKhuVuc, idLoaiPhong = ViewBag.idLoaiPhong })">
                            <span>
                                <i class="fas fa-map-marker-alt"></i>
                                @item.TenKV
                            </span>
                        </a>
                    </div>
                }

            </div>

            }
        </div>
    </div>
</section>


<!-- end of popular places section -->