<body>

    <!-- header section starts  -->

    <header class="header">
        <div id="menu-btn" class="fas fa-bars">

        </div>
        <a data-aos="zoom-in-left" data-aos-delay="150" href="#" class="logo"> <i class="fas fa-paper-plane"></i>Thiên An </a>
        <a data-aos="zoom-in-left" data-aos-delay="1300" href="#" class="btn">Đăng Nhập</a>
    </header>

    <!-- header section ends -->
    <!-- home section starts  -->

    <section class="home" id="home">
    </section>

    <!-- home section ends -->
    <!-- booking form section starts  -->

    <section class="book-form" id="book-form">

        <form action="">
            <div data-aos="zoom-in" data-aos-delay="150" class="inputBox">
                <span>Địa Điểm?</span>
                <input type="text" placeholder="Tên Địa Điểm" value="">
            </div>
            <div data-aos="zoom-in" data-aos-delay="300" class="inputBox">
                <span>Ngày Thuê?</span>
                <input type="date" value="">
            </div>
            <div data-aos="zoom-in" data-aos-delay="300" class="inputBox">
                <span>Ngày Trả?</span>
                <input type="date" value="">
            </div>
            <input data-aos="zoom-in" data-aos-delay="600" type="submit" value="Tìm Kiếm" class="btn">
        </form>

    </section>

    <!-- booking form section ends -->

    @RenderBody()

    <section class="services" id="services">

        <div class="heading">
            
            <h1>Tiêu Chí</h1>
        </div>

        <div class="box-container">

            <div class="box" data-aos="zoom-in-up" data-aos-delay="150">
